{
  "include": ["src/**/*"],
  "compilerOptions": {
    /* Language and Environment */
    "target": "es2021",
    "jsx": "preserve",

    /* Modules */
    "module": "commonjs",
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
      "components/*": ["./src/components/*"],
      "features/*": ["./src/features/*"],
      "hooks/*": ["./src/hooks/*"],
      "services/*": ["./src/services/*"],
      "css/*": ["./src/css/*"],
      "assets/*": ["./src/assets/*"],
      "config/*": ["./src/config/*"],
      "types/*": ["./src/types/*"],
      "pages/*": ["./src/pages/*"]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
